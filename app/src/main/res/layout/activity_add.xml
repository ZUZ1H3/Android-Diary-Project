<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:background="@android:color/transparent"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_left2"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/diary"
        android:gravity="center"
        android:text="05월 20일"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/diary"
        android:gravity="center"
        android:text="오늘의 날씨를 알려주세요!"
        android:textSize="20dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rGroup_weather"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/sunny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/weather_sunny"
                    android:tag="sunny"></RadioButton>

                <RadioButton
                    android:id="@+id/rainy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/weather_rainy"
                    android:tag="rainy"></RadioButton>

                <RadioButton
                    android:id="@+id/cloudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/weather_cloudy"
                    android:tag="cloudy"></RadioButton>

                <RadioButton
                    android:id="@+id/windy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/weather_windy"
                    android:tag="windy"></RadioButton>

                <RadioButton
                    android:id="@+id/lightning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/weather_lightning"
                    android:tag="lightning"></RadioButton>

                <RadioButton
                    android:id="@+id/snowy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/weather_snowy"
                    android:tag="snowy"></RadioButton>

                <RadioButton
                    android:id="@+id/rainbow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/weather_rainbow"
                    android:tag="rainbow"></RadioButton>
            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/diary"
        android:gravity="center"
        android:text="오늘의 기분은 어땠나요?"
        android:textSize="20dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/rGroup_mood"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/happy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_happy"
                    android:tag="happy"></RadioButton>

                <RadioButton
                    android:id="@+id/sad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_sad"
                    android:tag="sad"></RadioButton>

                <RadioButton
                    android:id="@+id/angry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_angry"
                    android:tag="angry"></RadioButton>

                <RadioButton
                    android:id="@+id/lucky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_lucky"
                    android:tag="lucky"></RadioButton>

                <RadioButton
                    android:id="@+id/soso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_soso"
                    android:tag="soso"></RadioButton>

                <RadioButton
                    android:id="@+id/flutter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_flutter"
                    android:tag="flutter"></RadioButton>

                <RadioButton
                    android:id="@+id/tired"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_tired"
                    android:tag="tired"></RadioButton>

                <RadioButton
                    android:id="@+id/comfortable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_comfortable"
                    android:tag="comfortable"></RadioButton>

                <RadioButton
                    android:id="@+id/exciting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/mood_exciting"
                    android:tag="exciting"></RadioButton>
            </RadioGroup>
        </LinearLayout>
    </HorizontalScrollView>

    <ImageButton
        android:id="@+id/button_write"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:background="@android:color/transparent"
        android:padding="0sp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_right2"
        tools:ignore="SpeakableTextPresentCheck" />
</LinearLayout>
